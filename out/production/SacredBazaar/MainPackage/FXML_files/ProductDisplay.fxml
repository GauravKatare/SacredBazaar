<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<AnchorPane prefHeight="341.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="MainPackage.ProductDisplayController">
   <children>
      <HBox prefHeight="347.0" prefWidth="600.0">
         <children>
            <VBox prefHeight="344.0" prefWidth="275.0">
               <children>
                  <ImageView fx:id="ProductImage" fitHeight="346.0" fitWidth="275.0" pickOnBounds="true">
                     <image>
                        <Image url="@../Images/image_not_avail.png" />
                     </image>
                  </ImageView>
               </children>
            </VBox>
            <VBox prefHeight="349.0" prefWidth="325.0">
               <children>
                  <Label fx:id="productCategory" alignment="CENTER" contentDisplay="CENTER" prefHeight="46.0" prefWidth="322.0" text="Product Name" textAlignment="JUSTIFY">
                     <font>
                        <Font name="Lucida Bright Demibold" size="38.0" />
                     </font>
                  </Label>
                  <TextArea fx:id="productDescription" editable="false" prefHeight="200.0" prefWidth="200.0" promptText="Product Specialities">
                     <font>
                        <Font name="Lucida Sans Regular" size="19.0" />
                     </font>
                  </TextArea>
                  <VBox prefHeight="69.0" prefWidth="325.0">
                     <children>
                        <Label fx:id="RetailerName" prefHeight="27.0" prefWidth="328.0" text="Retailer Name" />
                        <Label fx:id="RetailerAdd" prefHeight="26.0" prefWidth="325.0" text="Retailer Address" />
                        <Label fx:id="RetailerContact" prefHeight="27.0" prefWidth="323.0" text="Retailer Contact Number " />
                     </children>
                  </VBox>
                  <HBox prefHeight="28.0" prefWidth="325.0">
                     <children>
                        <Button fx:id="AddtoCart" mnemonicParsing="false" prefHeight="27.0" prefWidth="121.0" text="Add to cart" />
                        <Button fx:id="AddtoWishList" mnemonicParsing="false" prefHeight="27.0" prefWidth="129.0" text="Add to wish list" />
                        <Button fx:id="BuyButton" mnemonicParsing="false" prefHeight="26.0" prefWidth="104.0" text="Buy" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
</AnchorPane>
